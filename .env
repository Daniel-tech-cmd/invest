# Environment Variables for Investment Platform
# Copy this file to .env.local for Next.js or configure these in your deployment environment

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret key for token signing (use a strong, random string)
SECRET=your_jwt_secret_key_here

# =============================================================================
# DATABASE
# =============================================================================
# MongoDB connection string
MONGODB_URL=mongodb://localhost:27017/investment_platform

# =============================================================================
# API URLS
# =============================================================================
# Public URL for client-side API calls (accessible from browser)
NEXT_PUBLIC_URL=http://localhost:3000

# Server-side URI for internal API calls
URI=http://localhost:3000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email server host (e.g., smtp.gmail.com, smtp.outlook.com)
HOST=smtp.gmail.com

# Email server port (usually 587 for TLS, 465 for SSL)
EMAIL_PORT=587

# Email security setting (true for secure connection)
SECURE=true

# Email username/sender address
USER=your_email@example.com

# Email password or app-specific password
# Note: This variable is used in the code but not found in search results
# EMAIL_PASSWORD=your_email_password_here

# =============================================================================
# CLOUDINARY (IMAGE STORAGE)
# =============================================================================
# Cloudinary cloud name
CLOUD_NAME=your_cloudinary_cloud_name

# Cloudinary API key
API_KEY=your_cloudinary_api_key

# Cloudinary API secret
API_SECRET=your_cloudinary_api_secret

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Replace all placeholder values with your actual credentials
# 2. For Next.js, you may want to create .env.local instead of .env
# 3. Add .env to your .gitignore file to keep secrets secure
# 4. For production, set these variables in your hosting platform's environment settings
